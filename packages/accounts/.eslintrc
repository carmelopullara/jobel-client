{
  "extends": "airbnb",
  "rules": {
    "react/jsx-filename-extension": 0,
    "arrow-body-style": 0,
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 2,
    "import/order": 0
  },
  "env": {
    "browser": true
  },
  "plugins": ["react-hooks"],
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
